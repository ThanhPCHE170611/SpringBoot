<UserControl
    x:Class="NewwaveDesignProject.UI.UserControls.CardSettingUC"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:NewwaveDesignProject.UI.UserControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Border
        Background="White"
        BorderBrush="Transparent"
        BorderThickness="0"
        CornerRadius="25">
        <ListView
            Width="350"
            Height="440"
            Padding="30,30,48,30"
            Background="Transparent"
            BorderThickness="0"
            DataContext="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type local:CardSettingUC}}}"
            ItemContainerStyle="{StaticResource ListViewItemCardSetting}"
            ItemsSource="{Binding DataContext}"
            ScrollViewer.VerticalScrollBarVisibility="Hidden"
            Style="{DynamicResource AlightmentCenter}" />
    </Border>


</UserControl>
