<UserControl
    x:Class="NewwaveDesignProject.UI.UserControls.MyInvestment"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:NewwaveDesignProject.UI.UserControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid VerticalAlignment="Center">
        <ListView
            Background="{StaticResource ColorTranparent}"
            BorderThickness="0"
            ItemContainerStyle="{StaticResource ListViewItemInvestmentTemplate}"
            ItemsSource="{Binding ListInvestment, RelativeSource={RelativeSource AncestorType=UserControl}}" />
    </Grid>
</UserControl>
