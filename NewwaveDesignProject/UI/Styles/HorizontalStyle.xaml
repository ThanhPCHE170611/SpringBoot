<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="LeftHorizontalAlignment" TargetType="FrameworkElement">
        <Setter Property="HorizontalAlignment" Value="Left" />
    </Style>
    <Style x:Key="CenterHorizontalAlignment" TargetType="FrameworkElement">
        <Setter Property="HorizontalAlignment" Value="Center" />
    </Style>
    <Style x:Key="StretchHorizontalAlignment" TargetType="FrameworkElement">
        <Setter Property="HorizontalAlignment" Value="Stretch" />
    </Style>
    <Style x:Key="RightHorizontalAlignment" TargetType="FrameworkElement">
        <Setter Property="HorizontalAlignment" Value="Right" />
    </Style>
</ResourceDictionary>