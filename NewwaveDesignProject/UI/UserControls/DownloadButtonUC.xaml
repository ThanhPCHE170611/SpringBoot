<UserControl
    x:Class="NewwaveDesignProject.UI.UserControls.DownloadButtonUC"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:NewwaveDesignProject.UI.UserControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="36"
    d:DesignWidth="100"
    mc:Ignorable="d">
    <Border
        Width="100"
        Height="35"
        HorizontalAlignment="Left"
        VerticalAlignment="Center"
        BorderBrush="#123288"
        BorderThickness="1"
        CornerRadius="25">
        <Button
            Name="btnDowload"
            Width="98"
            Height="32"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Background="Transparent"
            BorderThickness="0"
            Click="btnDowload_Click"
            Content="Download"
            FontSize="15"
            Foreground="{StaticResource ColorSapphireBlue}"
            Style="{StaticResource SurroundedBorderButton}" />
    </Border>
</UserControl>
