<UserControl
    x:Class="NewwaveDesignProject.UI.UserControls.CardListUC"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:NewwaveDesignProject.UI.UserControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <ListView
            VerticalAlignment="Top"
            VerticalContentAlignment="Center"
            Background="Transparent"
            BorderBrush="Transparent"
            BorderThickness="0"
            ItemContainerStyle="{DynamicResource ListViewItemCardList}"
            ItemsSource="{Binding CardList, RelativeSource={RelativeSource AncestorType=UserControl}}"
            ScrollViewer.VerticalScrollBarVisibility="Hidden" />
    </Grid>
</UserControl>
