<UserControl
    x:Class="NewwaveDesignProject.UI.UserControls.InvoiceSentUC"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:NewwaveDesignProject.UI.UserControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">


    <Border
        Width="350"
        Height="364"
        Style="{StaticResource BorderRadiusItem}">
        <ListView
            Padding="20,0,20,0"
            Background="{StaticResource ColorTranparent}"
            BorderThickness="0"
            ItemContainerStyle="{StaticResource ListViewItemInvoiceSentTemplate}"
            ItemsSource="{Binding ListInvoiceSent, RelativeSource={RelativeSource AncestorType=UserControl}}"
            Style="{StaticResource CenterAlignmentStyle}" />
    </Border>


</UserControl>
