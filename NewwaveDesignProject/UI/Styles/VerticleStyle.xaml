<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="TopAlignmentStyle" TargetType="FrameworkElement">
        <Setter Property="VerticalAlignment" Value="Top" />
    </Style>
    <Style x:Key="CenterAlignmentStyle" TargetType="FrameworkElement">
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>
    <Style x:Key="StretchAlignmentStyle" TargetType="FrameworkElement">
        <Setter Property="VerticalAlignment" Value="Stretch" />
    </Style>
    <Style x:Key="BottomAlignmentStyle" TargetType="FrameworkElement">
        <Setter Property="VerticalAlignment" Value="Bottom" />
    </Style>
</ResourceDictionary>