<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:lc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf">

    <Style x:Key="BorderRadiusItem" TargetType="Border">
        <Setter Property="CornerRadius" Value="25" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Background" Value="{DynamicResource ColorWhite}" />
    </Style>
    <Style x:Key="BorderRadiusColumn" TargetType="Border">
        <Setter Property="CornerRadius" Value="10" />
        <Setter Property="BorderThickness" Value="0" />
    </Style>

    <Style x:Key="CustomColumnSeriesStyle" TargetType="lc:ColumnSeries">
        <Setter Property="ColumnPadding" Value="5" />
        <Setter Property="MaxColumnWidth" Value="60" />
        <Setter Property="DataLabels" Value="True" />
    </Style>
</ResourceDictionary>